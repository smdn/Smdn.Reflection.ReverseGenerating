<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net471;net45;netstandard2.0;netstandard1.6</TargetFrameworks>
    <AssemblyName>Smdn.Reflection</AssemblyName>
    <RootNamespace>Smdn.Reflection</RootNamespace>
    <VersionPrefix>1.0</VersionPrefix>
    <VersionSuffix></VersionSuffix>
    <BaseOutputPath>..\build\bin\</BaseOutputPath>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup Label="metadata">
    <Title>Smdn.Reflection.dll</Title>
    <Description>Smdn reflection utility library</Description>
    <Company>smdn:総武ソフトウェア推進所</Company>
    <Copyright>Copyright © 2018 smdn</Copyright>

    <!-- AssemblyInfo -->
    <AssemblyVersion>$(Version)</AssemblyVersion>
    <InformationalVersion>$(VersionPrefix)$(VersionSuffix) ($(TargetFramework))</InformationalVersion>
    <Product>$(AssemblyName)-$(InformationalVersion)</Product>

    <!-- NuGet -->
    <Authors>smdn</Authors>
    <Owners>$(Authors)</Owners>
    <PackageProjectUrl>https://smdn.jp/works/libs/</PackageProjectUrl>
    <PackageLicenseUrl>https://smdn.jp/misc/license/MIT/</PackageLicenseUrl>
    <PackageIconUrl>https://smdn.jp/resources/images/smdn-64x64.png</PackageIconUrl>
  </PropertyGroup>

  <PropertyGroup Condition="$(TargetFramework.StartsWith('net4'))">
    <DefineConstants>$(DefineConstants);NET</DefineConstants>
  </PropertyGroup>
</Project>
